<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <!-- 도서 1 이미지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/book11" />
        </LinearLayout>

        <!-- 도서 1 세부정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:weightSum="3"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자바 코딩의 기술"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="현장에서 뽑은 70가지 예제로 배우는 코드 잘 짜는 법"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￦22,000\n264쪽\n사이먼 하러,리누스 디에츠,요르그 레너드,심지현\n2020.07.30"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
